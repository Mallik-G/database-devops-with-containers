@model InvoiceLogViewModel

@{
    ViewBag.Title = "Invoice Log";
}

@section Head {
    <style>
        .panel-body {
            max-height: 224px;
            overflow-y: auto;
        }
    </style>

}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="pull-right"><a asp-route-id="@(Model.Page+1)">Next <span class="glyphicon glyphicon glyphicon-chevron-right"></span></a></div>
    <div class="pull-left"><a asp-route-id="@(Model.Page-1)"><span class="glyphicon glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Previous</a></div>
</div>
<div class="row">&nbsp;</div>

<table class="table table-striped">
    <tr>
        <th>Invoice Log Id</th>
        <th>Date</th>
    </tr>
    @foreach (InvoiceLog i in Model.InvoiceLogs)
    {
        <tr>
            <td>@i.InvoiceLogId</td>
            <td>@i.CreateDate.ToString("g")</td>
        </tr>
    }
</table>
